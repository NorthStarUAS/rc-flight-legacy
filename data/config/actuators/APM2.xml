<?xml version="1.0"?>

<PropertyList>

  <module>APM2</module>
  <enable type="bool">true</enable>

  <!-- pwm signal rates (default is 50hz) -->
  <!-- note that CH1/CH2, CH3/CH4/CH5, and CH6/CH7/CH8 run off
       grouped timers so setting any of the group will also force
       the same rate for the other channels in the group, channels
       with rate of 0 are left untouched (but will be affected if
       another group member rate is set.) -->
  <pwm-rates> 
    <!-- ch1/ch2 are a group -->
    <channel n="0">200</channel>
    <channel n="1">200</channel>
    <!-- ch3/ch4/ch5 are a group -->
    <channel n="2">50</channel>
    <channel n="3">50</channel>
    <channel n="4">50</channel>
  </pwm-rates> 

  <!-- actuator gains (negative values = reverse) -->
  <gains>
    <channel n="0">-1.0</channel>
    <channel n="1">-1.0</channel>
    <channel n="2">1.0</channel>
    <channel n="3">-1.0</channel>
  </gains>

  <sas>
    <pilot-tune> <!-- hardwired to ch7 for now -->
      <enable type="bool">true</enable>
    </pilot-tune>
    <axis>
      <mode>roll</mode>
      <enable type="bool">true</enable>
      <gain>0.15</gain>
    </axis>
    <axis>
      <mode>pitch</mode>
      <enable type="bool">true</enable>
      <gain>0.2</gain>
    </axis>
    <axis>
      <mode>yaw</mode>
      <enable type="bool">true</enable>
      <gain>0.2</gain>
    </axis>
  </sas>
  
  <mixing>
    <!-- command mixing -->
    <mix>
      <mode>auto-coordination</mode>
      <enable type="bool">true</enable>
      <gain1>0.3</gain1>
    </mix>
    <mix>
      <mode>throttle-trim</mode>
      <enable type="bool">false</enable>
      <gain1>-0.1</gain1>
    </mix>
    <mix>
      <mode>flap-trim</mode>
      <enable type="bool">false</enable>
      <gain1>0.1</gain1>
    </mix>

    <!-- actuator mixing -->
    <mix>
      <mode>elevon</mode>
      <enable type="bool">false</enable>
      <gain1>1.0</gain1> <!-- aileron -->
      <gain2>1.0</gain2> <!-- elevator -->
    </mix>
    <mix>
      <mode>flaperon</mode>
      <enable type="bool">false</enable>
      <gain1>1.0</gain1> <!-- aileron -->
      <gain2>1.0</gain2> <!-- flap -->
    </mix>
    <mix>
      <mode>vtail</mode>
      <enable type="bool">false</enable>
      <gain1>1.0</gain1> <!-- elevator -->
      <gain2>1.0</gain2> <!-- rudder -->
    </mix>
    <mix>
      <mode>diff-thrust</mode>
      <enable type="bool">false</enable>
      <gain1>1.0</gain1> <!-- throttle -->
      <gain2>0.1</gain2> <!-- rudder -->
    </mix>
  </mixing>

</PropertyList>
